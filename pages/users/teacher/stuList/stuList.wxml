<view class="top-title"style='font-size:18px;'>{{coursename}}</view>
<view class="top-title"style='font-size:18px;'>学生名单({{stuList.length}})</view>
<scroll-view scroll-y="true"enable-back-to-top="true">
<view wx:if="{{stuList.length==0}}"class="tab-content1" >
        <view class="fa fa-commenting fa-5x"style='color:#999999'></view>
        <!--image class="tab-image" src="../../../image/hasMessage.png"mode="aspectFit"></image-->
        <text style='color:#999;margin-top:10px;font-size:18px;'>暂无信息</text>
      </view>
<view class="weui-cells weui-cells_after-title"wx:for="{{stuList}}"wx:for-item='item'wx:for-index='index'>
  <view class="weui-cell">
    <view class="weui-cell__hd">
      <view class="fa fa-user-circle fa-lg"style='color:{{iconBackColor[index%10]}}'></view>
    </view>
    <view class="weui-cell__bd"style='margin-left:10px;'>{{item.userId}}</view>
    <view class="weui-cell__ft">{{item.userName}}</view>
  </view>
</view>
</scroll-view>

