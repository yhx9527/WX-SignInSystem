@import "../student.wxss";



/*底部工具条*/
.bottom{
  height: 85rpx;
  border-top: 1rpx solid #f8f7f7;
  overflow: hidden;
}
.bottom-item {
  display: inline-block;
  width: 33%;
  height: 100%;
  vertical-align: text-bottom;
  text-align: center;
  overflow: hidden;
}
.bottom-item-content{
  display: inline-block;
  height: 100%;
  color: #909090;
}

.bottom-item-content-image{
  width: 50rpx;
  height: 100%;
  vertical-align: middle;
  margin-right: 10rpx;
}
.bottom-item-content-text {
  font-size: 23rpx;
  vertical-align: middle;
  margin-top: 10rpx;
  display: inline-block;
}

.cai image{
  margin-top: 5rpx;
}

/*分割线*/
.cut-line{
  height: 80%;
  width: 2rpx;
  background-color: #dddcdc;
  float: right;
  margin-top: 5%;
  margin-right: 3rpx;
}