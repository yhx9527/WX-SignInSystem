
  <form class="form"bindsubmit='formSubmitLeave'style="height:{{height}}px;width:{{width}}px"catchtap='cancelDel'>
    <view class="head">
      请假条
    </view>
    <view class="title">
      请假课程
    </view>
      <input class="inputCourse" value="{{courseItem.coursename}}"disabled="true"></input>
    <view class="title">  
      请选择请假日期
    </view>
    <view class="section">
      <picker mode="date" value="{{date}}"start="2018-01-01"end="2018-12-31"bindchange="bindDateChange"name="leaveDate"name="dates">
        <view class="picker">{{dates}}</view>
      </picker>
    </view>
    <view class="title">请选择请假周次</view>
    <view class="section">
      <picker mode="selector"value="{{nowWeek-1}}"range="{{Weeks}}"bindchange="bindWeekChange"name="nowWeek">
        <view class="picker">第{{nowWeek}}周</view>
      </picker>
    </view>
      <!--textarea class="reason"maxlength="50"value="{{reason}}"name="leaveReason"/-->
      <view class="title">请假凭证</view>
    <view class="box">
      <view wx:if="{{tempFilePaths!==[]}}"wx:for="{{tempFilePaths}}"wx:for-item="tempFilePath"bindtap="previewImage"data-path="{{tempFilePath}}">
      
       <image class="image"src="{{tempFilePath}}"mode="aspecFill"catch:longpress='delImage'/>
      </view>
      <image class="image"src="../../../../image/add.png"bindtap="{{tempFilePaths.length<1 ? 'chooseimage' : 'NOTchoose'}}"mode="scaleToFill"></image>
    </view>
    <button type="primary"class="button1"formType="submit">提交</button>
  </form>
  <view wx:if="{{ifDel}}"class="delImage"style='left:5px;top:200px'>
    <view class='delKuang'style='display:flex;'catchtap="confirmDelImage">
      <view class='fa fa-trash-o fa-lg 'style='padding:5px;color:#FFFFFF'></view>
      <view class='delText'>删除</view>
    </view>
    <view class="delAngle"></view>
  </view>

