@import "../../studentMtor/monitor.wxss";
@import "../../common/mainTabCell.wxss";
page{
  background-color: #eaeaea;
  height: auto;
  overflow: scroll;
  overflow-x: hidden;
}
.item-view{
  background-color: white;
  margin: 10rpx 12rpx 10rpx 12rpx;
  border: 1rpx solid #dddcdc;
}
.jilu{
  border-bottom: 3rpx solid gray;
  display: flex;
  flex-direction: row;
  margin-right: 12rpx;
  margin-left: 12rpx;
}
.jilu-image{
  height: 40px;
  width: 50px;
}
.jilu-time{
  height: 100%;
  font-weight: lighter;
  white-space: nowrap;
  padding-top: 10px;

}
.jilu-status{
  font-weight: bold;
  text-align: right;
  white-space: nowrap;
  padding-top: 10px;
  padding-left: 80px;
  flex:1;
  padding-right:10px;

}
.refresh-block {  
  padding: 15px;  
  text-align: center;
  background-color: #f7f7f7;  
}  
.refresh-block image {  
  width: 30px;  
  height: 30px;  
}  